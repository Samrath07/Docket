  <%- include("header") -%>    
    <div class="box" id="heading">
            <h1><%=listTitle %></h1> 
        </div>
       
       <div class="box">
            <ul>
              <% newItems.forEach((item) =>{ %>
                
                <form action="/delete" method="POST">
                  <div class="item">
                    <input type="checkbox" name = "deletedItem" onchange="this.form.submit()" value=<%= item._id %> >     
                    <p><%= item.name %></p>
                  </div>
                </form>
               <%})%> 
            </ul>
            <form class = "item" action="/" method="POST">
                <input type="text" name="newItem" placeholder="Add Here" autocomplete = "on">
                <button type="submit" name="list" value =<%= listTitle %> >+</button> 
            </form>
            
        </div>

        <%- include("footer") -%>
    